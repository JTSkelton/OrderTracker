
@model IEnumerable<Vendor>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-light">Vendor List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Vendor" asp-action="CreateVendor" class="btn btn-outline-light">
                <i class="bi bi-plus-square"></i> &nbsp; Add New Vendor
            </a>
        </div>
    </div>
</div>

<table class ="table table-borderd table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Vendor Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width 50%>
                    @obj.Name
                </td>
                <td width 30%>
                    @obj.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>

