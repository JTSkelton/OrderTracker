@model Vendor


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-light">Create Vendor</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name">Vendor Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description">Vendor Description</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PhoneNumber">Vendor Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" type="tel" placeholder="123-456-6789" />
        </div>
    </div>
</form>

